@model AJKM_phase1.RouteConfig

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sign Up</h2>
<form id="register" action="#" enctype="multipart/form-data" method="post">
    <label for="username">Username:</label><br />
    <input id="username" name="username" type="text" placeholder="John.Smith22" required />
    <br />
    <label for="password">Password:</label><br />
    <input id="password" name="password" type="text" placeholder="********" required />
    <br />
    <label for="email">Email:</label><br />
    <input id="email" name="email" type="email" placeholder="123&#064asp.net" required />
    <br />
    <label for="firstName">First Name:</label><br />
    <input id="firstName" name="firstName" type="text" placeholder="John" required />
    <br />
    <label for="lastName">Last Name:</label><br />
    <input id="lastName" name="lastName" type="text" placeholder="Smith" required />
    <br /><br />
    <input type="submit" value="Register" />
</form>