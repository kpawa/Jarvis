
@{
    ViewBag.Title = "RegisterDevices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    Enter in your login inforamtion for the provider's account and we will get a list
    of your registered devices.
</p>


<div class="container">
    <div class="col-sm-8 page-content">
        <h2 style="margin-bottom: 40px; margin-left: 10px;">@Html.Raw(ViewBag.Title)</h2>
        <div>

            <div>
                <h3>Currently Connected Devices: </h3>
                <ul>
                    <li><a href="Edit Profile">NestLabs Thermostat</a></li>
                    <li><a href="Edit Profile">WeMo Light #1</a></li>
                    <li><a href="Edit Profile">WeMo Light #2</a></li>
                    <li><a href="Edit Profile">June Intelligent Oven</a></li>
                    <li><a href="Edit Profile">Apple TV</a></li>
                </ul>
            </div>

            <h3> Add New Device </h3>

            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
                    Find New Provider
                    <span class="caret"></span>
                </button>
            <ul class="dropdown-menu">
                <li value="Nest Labs">Nest Labs</li>
                <li value="SmartThings">SmartThings</li>
                <li value="Belkin WeMo">Belkin WeMo</li>
                <li value="FitBit">FitBit</li>
                <li value="LG Electronics">LG Electronics</li>
            </ul>
                </div>

        </div>

        <div>
            @{
                Html.RenderPartial("Partials/Login");
            }
        </div>

    </div>
    <div style="padding-left:20px;" class="col-sm-4 side-bar">

        <div class="col-sm-12">
            <h3> Account Details </h3>
            @Html.ActionLink("Register Devices", "RegisterDevices")
            <hr>
            @Html.ActionLink("Data View", "Data") |
            @Html.ActionLink("Account View", "AccountView") |
            @Html.ActionLink("Register Device", "RegisterDevices")
        </div>

    </div>
</div>
