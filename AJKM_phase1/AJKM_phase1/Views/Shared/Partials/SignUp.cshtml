<head>
    <style>
        body {
            background-image: url(/images/mobile-icons-background.jpg);
            background-size: cover;
        }
    </style>
</head>
<form id="register" class="form-horizontal col-sm-12" action="#" enctype="multipart/form-data" method="post">
    <fieldset class="fieldset-border" style="background-color: black; color: white; opacity: 0.8;">
        <legend class="fieldset-border" style="color: silver;"> Sign Up </legend>
        <div class="form-group">
            <label class="control-label col-sm-3" for="username">Username:</label>
            <div class="col-sm-9">
                <input id="username" class="form-control" name="username" type="text" placeholder="John.Smith22" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="password">Password:</label>
            <div class="col-sm-9">
                <input id="password" class="form-control" name="password" type="text" placeholder="********" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="email">Email:</label>
            <div class="col-sm-9">
                <input id="email" class="form-control" name="email" type="email" placeholder="123&#064asp.net" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="firstName">First Name:</label>
            <div class="col-sm-9">
                <input id="firstName" class="form-control" name="firstName" type="text" placeholder="John" required />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-3" for="lastName">Last Name:</label>
            <div class="col-sm-9">
                <input id="lastName" class="form-control" name="lastName" type="text" placeholder="Smith" required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
                <div class="g-recaptcha inp50" data-sitekey="6LfH2xcTAAAAAKXqeM6VL84Z319asFJcL4s2-Ehb"></div>
                <input name="submit" type="submit" value="Sign-up" class="btn btn-info btn-lg btn-block" onclick="location.href='@Url.Action("Login", "Accounts")';return false;" />
                @Html.Raw(ViewBag.CaptchaResponse)
            </div>
        </div>
    </fieldset>
</form>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src='https://www.google.com/recaptcha/api.js'></script>