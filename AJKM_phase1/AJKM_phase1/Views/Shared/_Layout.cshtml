<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <a class="" href="@Url.Action("Index", "home")">
            <img class="pull-left logo" src="~/images/logov1.png">
        </a>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Jarvis", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            User Role Dashboards <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("ConsumerDashboard", "Accounts")">Consumer</a></li>
                            <li><a href="@Url.Action("AdminDashBoard", "Accounts")">Admin</a></li>
                        </ul>
                    </li>
                    <li><a href="@Url.Action("Data", "Accounts")">Data</a></li>
                    <li><a href="@Url.Action("Insights", "Accounts")">Insights</a></li>
                    <li><a href="@Url.Action("About", "Home")">About</a></li>
                    <li><a href="@Url.Action("Support", "Home")">Support</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="https://drive.google.com/open?id=0B2Rf6NjOLm0Sd28xZS1HUl9GeTQ">Phase-1 Doc</a></li>
                    <li><a href="@Url.Action("LoginSignUp", "Accounts")">Log in / Sign up</a></li>

                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        <div class="clearfix col-sm-12">
            @RenderBody()
            <footer class="col-sm-12">
                <hr />
                <p style="text-align: center">&copy; @DateTime.Now.Year - Jarvis</p>
            </footer>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>